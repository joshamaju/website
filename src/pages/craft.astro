---
import "../styles/global.css";
import Header from "../components/header.astro";

const content = new Array(10).fill(0).map((_, i) => i);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Joshua Amaju | Home</title>
  </head>
  <body class="page-dark">
    <Header />

    <main class="container mx-auto space-y-6 px-4 py-10">
      <h2 class="text-white text-4xl font-semibold">Craft</h2>

      <ul class="crafts">
        {
          content.map((n) => {
            return (
              <li class="craft">
                <div class="preview" />

                <div class="title-container">
                  <h4 class="title">
                    <a href="#">Title {n}</a>
                  </h4>
                </div>
              </li>
            );
          })
        }
      </ul>
    </main>
  </body>
</html>

<style>
  html,
  body {
    min-height: 100vh;
  }

  /* @media screen and (min-width: 768px) {
    html,
    body {
      height: 100%;
    }
  } */

  /* @media screen and (min-width: 768px) {
    .page {
      display: grid;
      grid-template-rows: auto 1fr;
    }
  } */

  .crafts > * + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 768px) {
    .crafts {
      gap: 2rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    @supports (display: grid) {
      .crafts > * + * {
        margin-top: 0;
      }
    }
  }

  .craft {
    overflow: hidden;
    position: relative;
    border-radius: 1rem;
  }

  .preview {
    height: 15rem;
    background-color: theme(colors.gray.500);
  }

  .title-container {
    left: 0;
    right: 0;
    bottom: 0;
    padding: 1rem;
    position: absolute;
    background-color: theme(colors.gray.700/0.4);
  }

  .title {
    color: #fff;
    font-weight: 600;
    font-size: theme(fontSize.xl);
  }
</style>
